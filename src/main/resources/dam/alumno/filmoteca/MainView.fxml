<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="1000" prefWidth="650" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.alumno.filmoteca.MainViewController">
    <TilePane prefHeight="200.0" prefWidth="200.0">
        <children>
            <Pane prefHeight="1194.0" prefWidth="1000.0" stylesheets="@stylesMainView.css">
                <children>
                    <TextField fx:id="searchField" layoutX="705.0" layoutY="718.0" onAction="#onSearchMovie" prefHeight="25.0" prefWidth="255.0" promptText="Buscar película por título" />
                    <ListView fx:id="peliculasListView" layoutX="40.0" layoutY="346.0" prefHeight="357.0" prefWidth="614.0" />
                    <TextArea fx:id="descriptionField" editable="false" layoutX="150.0" layoutY="800.0" prefHeight="43.0" prefWidth="808.0" />

                    <Label layoutX="41.0" layoutY="810.0" text="Descripción:" />
                    <TextField fx:id="yearField" editable="false" layoutX="404.0" layoutY="761.0" prefHeight="33.0" prefWidth="47.0" />

                    <Label layoutX="356.0" layoutY="764.0" text="Año:" />
                    <TextField fx:id="titleField" editable="false" layoutX="171.0" layoutY="760.0" prefHeight="25.0" prefWidth="176.0" />
                    <TextField fx:id="idField" editable="false" layoutX="76.0" layoutY="761.0" prefHeight="25.0" prefWidth="33.0" />

                    <Label layoutX="114.0" layoutY="764.0" text="Título:" />
                    <Label layoutX="42.0" layoutY="764.0" text="ID:" />

                    <Label layoutX="463.0" layoutY="763.0" text="Rating:" />
                    <TextField fx:id="ratingField" editable="false" layoutX="533.0" layoutY="761.0" prefHeight="29.0" prefWidth="37.0" />
                    <Button fx:id="modificarPelicula" disable="true" layoutX="703.0" layoutY="756.0" onAction="#onModifyMovie" prefHeight="29.0" prefWidth="116.0" text="Modificar" />
                    <Button layoutX="42.0" layoutY="854.0" onAction="#onAddMovie" prefHeight="29.0" prefWidth="255.0" text="Añadir Nueva Película" />
                    <Button fx:id="borrarPelicula" disable="true" layoutX="842.0" layoutY="756.0" onAction="#onDeleteMovie" prefHeight="29.0" prefWidth="116.0" text="Borrar" />
                    <Button layoutX="705.0" layoutY="854.0" onAction="#onCloseApp" prefHeight="29.0" prefWidth="255.0" text="Cerrar" />

                    <ImageView fx:id="posterImageView" fitHeight="357.0" fitWidth="255.0" layoutX="705.0" layoutY="346.0" />
                    <Label alignment="CENTER" layoutX="323.0" layoutY="294.0" prefHeight="38.0" prefWidth="325.0" text="FILMOTECA">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </children>
            </Pane>
        </children>
    </TilePane>
</VBox>
